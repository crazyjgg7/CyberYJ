{
  "version": "1.0",
  "description": "各场景的输出结构模板定义",
  "templates": {
    "fortune_standard": {
      "name": "命运标准模板",
      "description": "用于命运、流年运势分析",
      "structure": {
        "hexagram_info": {
          "required": true,
          "fields": [
            "id",
            "name",
            "symbol",
            "judgment",
            "image"
          ]
        },
        "fortune_analysis": {
          "required": true,
          "sections": {
            "overall": {
              "required": true,
              "fields": [
                "rating",
                "summary",
                "key_points"
              ]
            },
            "hexagram_explanation": {
              "required": true,
              "fields": [
                "meaning",
                "element_relation",
                "keywords"
              ]
            },
            "fortune_details": {
              "required": true,
              "sub_sections": [
                "trend",
                "opportunities",
                "challenges",
                "timing"
              ]
            },
            "action_guide": {
              "required": true,
              "format": {
                "do": "list",
                "dont": "list"
              }
            }
          }
        },
        "additional_info": {
          "required": true,
          "fields": [
            "solar_term",
            "sources"
          ]
        }
      },
      "display_format": {
        "use_emoji": true,
        "use_sections": true,
        "use_rating_stars": true,
        "title_format": "# 第{id}卦 - {name}卦（{symbol}）"
      }
    },
