{
  "mcpServers": {
    "CyberYJ": {
      "command": "python3",
      "args": [
        "/Users/apple/dev/CyberYJ/run_server.py"
      ],
      "env": {
        "PYTHONPATH": "/Users/apple/dev/CyberYJ/src"
      },
      "description": "易经风水 MCP 服务 - 提供六十四卦解卦分析和罗盘坐向分析"
    }
  },
  "tools": {
    "fengshui_divination": {
      "name": "fengshui_divination",
      "description": "易经六十四卦解卦分析（八宅 + 玄空飞星体系下的节气影响解释）",
      "parameters": {
        "upper_trigram": {
          "type": "string",
          "required": true,
          "description": "上卦（卦名/数字/方位），如：乾、1、西北"
        },
        "lower_trigram": {
          "type": "string",
          "required": true,
          "description": "下卦（卦名/数字/方位），如：坤、2、西南"
        },
        "question_type": {
          "type": "string",
          "enum": ["事业", "财运", "感情", "健康"],
          "required": false,
          "description": "问题类型（可选）"
        },
        "changing_line": {
          "type": "integer",
          "minimum": 1,
          "maximum": 6,
          "required": false,
          "description": "变爻位置（1-6，可选）"
        },
        "timestamp": {
          "type": "string",
          "required": false,
          "description": "RFC3339 时间戳（可选，默认当前时间）"
        },
        "timezone": {
          "type": "string",
          "required": false,
          "description": "IANA 时区名（可选，默认 Asia/Shanghai）"
        }
      },
      "examples": [
        {
          "description": "基本占卜",
          "input": {
            "upper_trigram": "乾",
            "lower_trigram": "巽"
          }
        },
        {
          "description": "事业运势占卜",
          "input": {
            "upper_trigram": "乾",
            "lower_trigram": "乾",
            "question_type": "事业"
          }
        },
        {
          "description": "带变爻的占卜",
          "input": {
            "upper_trigram": "坤",
            "lower_trigram": "乾",
            "changing_line": 3
          }
        }
      ]
    },
    "luopan_orientation": {
      "name": "luopan_orientation",
      "description": "罗盘坐向分析（八宅 + 玄空飞星）",
      "parameters": {
        "sitting_direction": {
          "type": "string",
          "required": true,
          "description": "坐向，支持多种格式：坐北朝南 / 坐340向160 / 坐亥向巳"
        },
        "building_type": {
          "type": "string",
          "enum": ["住宅", "办公室", "商铺", "工厂"],
          "required": true,
          "description": "建筑类型"
        },
        "owner_birth": {
          "type": "string",
          "required": false,
          "description": "公历生日（YYYY-MM-DD，可选，用于命卦匹配）"
        },
        "timestamp": {
          "type": "string",
          "required": false,
          "description": "RFC3339 时间戳（可选，默认当前时间）"
        },
        "timezone": {
          "type": "string",
          "required": false,
          "description": "IANA 时区名（可选，默认 Asia/Shanghai）"
        }
      },
      "examples": [
        {
          "description": "基本坐向分析",
          "input": {
            "sitting_direction": "坐北朝南",
            "building_type": "住宅"
          }
        },
        {
          "description": "带命卦匹配的分析",
          "input": {
            "sitting_direction": "坐西北向东南",
            "building_type": "办公室",
            "owner_birth": "1990-05-15"
          }
        },
        {
          "description": "使用角度的分析",
          "input": {
            "sitting_direction": "坐340向160",
            "building_type": "商铺"
          }
        }
      ]
    }
  },
  "usage_guide": {
    "installation": {
      "step1": "将此配置添加到 Claude Desktop 的 claude_desktop_config.json 文件中",
      "step2": "重启 Claude Desktop 应用",
      "step3": "在对话中使用自然语言调用工具"
    },
    "example_prompts": [
      "帮我占卜一下运势，上卦乾，下卦巽",
      "我想问事业运势，上卦坤，下卦乾",
      "我家坐北朝南，帮我分析一下风水",
      "我的办公室坐西北向东南，我是1990年5月15日出生的，帮我看看风水",
      "分析一下坐340向160的商铺风水"
    ],
    "testing": {
      "command": "python3 /Users/apple/dev/CyberYJ/test_server.py",
      "description": "运行测试脚本验证 MCP server 功能"
    }
  },
  "data_sources": [
    "周易（易经） - https://ctext.org/book-of-changes",
    "二十四节气那些事儿",
    "青囊奥语 - 二十四山向",
    "八宅明镜 - 八宅规则",
    "地理辨正疏 - 玄空飞星规则"
  ],
  "version": "0.1.0",
  "author": "CyberYJ Team",
  "license": "MIT"
}
